

@using Microsoft.AspNetCore.Identity
@inject UserManager<ErpUser> UserManager

<h3 class="master_name">ОЧЕРЕДЬ ПРОЕКТОВ</h3>

<div id="newProjectsContainer" class="master_list">
    @if (User.IsInRole("Boss"))
    {
        <div id="addProjectButton" onclick="addProject()" class="project">
            <img src="~/plus.jpg" alt="">
            <div class="project_text">
                <p>добавить проект</p>
            </div>
        </div>
    }
</div>

 
<div id="employeesContainer"></div>


<div id="salaryDiv" class="popup">
    <svg class="close-btn" onclick="closeDiv('salaryDiv')" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
         viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <div id="salaryDivInner" class="inner-container"></div>
</div>

<div id="calendarContainerForeign" class="popup ">
    <svg class="close-btn" onclick="closeDiv('calendarContainerForeign')" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
         viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <div id="calendarContainer" class="inner-container calendar-container"> <div class="calendar" id="calendar"></div> </div>
</div>

<div class="modal" id="taskModal">
    @Html.Partial("_TaskViewPartial")
</div>

<div id="addImage" class="popup_small">
    <svg class="close-btn" onclick="closeDiv('addImage')" xmlns="http://www.w3.org/2000/svg" width="24"
         height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <div id="addImageInner" class="inner-container"> @* @Html.Partial("_AddPhotosPartial") *@ </div>
</div>

<div id="addEmployee" class="popup_small">
    <svg class="close-btn" onclick="closeDiv('addEmployee')" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
         viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <div id="addEmployeeInner" class="inner-container"></div>
</div>

<div id="addClient" class="popup_small">
    <svg class="close-btn" onclick="closeDiv('addClient')" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
         viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <div id="addClientInner" class="inner-container">@Html.Partial("_CreateClientPartial")</div>
</div>

<div id="employeeData" class="popup_small">
    <svg class="close-btn" onclick="closeDiv('employeeData')" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
         viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <div id="employeeDataInner" class="inner-container"></div>
</div>


<div id="editPopup" class="popup_small">
    <svg class="close-btn" onclick="closeDiv('editPopup')" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
            viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>

    <h2>Редактировать</h2>
    <input type="text" id="searchInput" list="editSelect" placeholder="Введите название...">
    <input type="text" id="typeId" placeholder="Введите новое название...">

    <datalist id="editSelect"> </datalist>
    <button onclick="saveTypeChanges()" id="saveChanges">Сохранить</button>
    <button onclick="deleteTypeItem()" id="deleteItem">Удалить</button>

</div>

