


@model ERP.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Сброс пароля";
}



<div class="login-container">
    <div class="login-modal">
        <h4>@ViewData["Title"]</h4>
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="NewPassword">Пароль: </label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Ещё разок: </label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Сохранить новый пароль</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}